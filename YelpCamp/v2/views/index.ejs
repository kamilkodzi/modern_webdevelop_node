<% include partials/header %>





<div style="margin-top: 20px;" class="container">
   
   <header class="jumbotron">
      <div class="container">
      <h1>Wellcome To YelpCamp</h1>
      <p>View our hand-picked campgrounds form all over the world</p>
      <p>
         <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new campground</a>
      </p>
      </div>
   </header>

   <div class="row text-center">
      <% campgrounds.forEach(function(campground){ %>
         <div class="col-md-3 col-sm-6">
            <div>
               <img class="img-thumbnail" src="<%= campground.image %>">
               <figcaption class="figure-caption"> 
                  <h4><%= campground.name %> </h4> 
                  <p>
                     <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">More Info</a>
                  </p>
               </figcaption>
            </div>
         </div>
      <% }); %>
   </div>

</div>
<% include partials/footer %>