<% include ../partials/header %>

<div class="container mb-4">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card mb-3">
                <img class="card-img-top" src="<%=campground.image%>">
                <div class="body">
                    <h4 class="card-title d-inline-block px-3"><a href="#"><%= campground.name %></a></h4> 
                    <h4 class="card-title float-right px-3">$9.00/night</h4>
                    <p class="card-text px-3 pb-2"><%=campground.description%></p>
                </div>
            </div>
            
            <div class="card bg-light">
                <div class="card-body">
                    <a class="btn btn-success float-right" href="/campgrounds/<%=campground._id%>/comments/new">Add New Comment</a>
                </div>
            </div>
            
            <% campground.comments.forEach(function(comment){ %>
            <div class="card border-top-0 bg-light">
                <div class="card-body p-1 px-3">
                    <strong class="card-title"><%= comment.author %></strong>
                    <span class="float-right card-title">10 days ago</span>
                    <p class="card-text">
                    <%= comment.text %>
                    </p>
                </div>
            </div>
            <% }) %>
            
        </div>
    </div>
</div>

<% include ../partials/footer %>